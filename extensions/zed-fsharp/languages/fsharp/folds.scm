; Code folding regions for F# in Zed

; Module definitions
(module_defn) @fold

; Namespace definitions
(namespace) @fold

; Function and value definitions
(function_or_value_defn) @fold

; Type definitions
(type_definition) @fold
(record_type_defn) @fold
(union_type_defn) @fold
(class_type_defn) @fold
(interface_type_defn) @fold
(type_abbrev_defn) @fold
(type_extension) @fold

; Member definitions
(member_defn) @fold

; Match expressions
(match_expression) @fold

; If expressions
(if_expression) @fold

; Try-with expressions
(try_expression) @fold

; For loops
(for_expression) @fold

; While loops
(while_expression) @fold

; Lambda expressions
(fun_expression) @fold

; Computation expressions
(ce_expression) @fold

; Object expressions
(object_expression) @fold

; Block comments
(block_comment) @fold

; XML documentation
(xml_doc) @fold

; Begin/end blocks
(begin_end_expression) @fold

; Parenthesized expressions (when multi-line)
(paren_expression) @fold

; List expressions
(list_expression) @fold

; Array expressions
(array_expression) @fold

; Record expressions
(record_expression) @fold

; Anonymous record expressions
(anon_record_expression) @fold

; Attribute sets
(attribute_set) @fold
